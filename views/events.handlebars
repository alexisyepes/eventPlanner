<body id="eventsBg">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <a href="/"><button type="button" class="btn btn-warning" id="home-btn">Home</button></a>
        <a href="/aboutUs"><button type="button" class="btn btn-warning" id="aboutUs-btn">About Us</button></a>
        <a href="/booking"><button type="button" class="btn btn-warning" id="booking-btn">Getting
            Started</button></a>
        <a href="/events"><button type="button" class="btn btn-warning" id="events-btn">Current Events</button></a>
      </div>
      <div class="container">
        <div class="row">
          <div class="col-8 offset-2">
            <div class="card mt-10" id="eventMainBox">
              <div class="card-body">
                <h5 class="card-title">List of Events</h5>
                <ul>
                  {{#each events}}
                  <li>
                    <button type="button" class="btn-modal-event btn-primary" data-toggle="modal"
                      data-target="myModalEvent" eventsID={{this.id}}>{{this.id}}.
                      {{this.name}} <span id="event-btn-text">Click me for details</span></button><br>
                  </li>

                  {{/each}}
                </ul>

                <a href="/">‚Üê Back To Home</a>
              </div>
            </div>
          </div>
        </div>

      </div>

      <!-- The Modal -->
      {{#each events}}
      <div id="myModalEvent" class="modal">
        <!-- Modal content -->
        <div class="modal-content" id="modalContentEvent">
          <h1 id="modalTitle" class="modal-labels"><b>Your Event</b></h1>
          <h2 id="event-name" class="modal-labels"><b>Event Name:</b> {{this.name}}</h2>
          <h2 class="modal-labels">
            <b>Date and Start Time:</b> {{this.startTime}}
          </h2>
          <h2 class="modal-labels">
            <b>Date and End Time:</b> {{this.endTime}}
          </h2>
          <h2 class="modal-labels">
            <b>Location:</b> {{this.location}}
          </h2>
          <h2 class="modal-labels">
            <b>Style:</b> {{this.style}}
          </h2>
          <br>
        </div>

      </div>
      {{/each}}

      <!--Modal Bootstrap-->
    </div>
  </div>
  <script src="/js/indexEvents.js"></script>
</body>